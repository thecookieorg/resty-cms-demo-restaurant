<%= render 'dashboards/generic' %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
      <h2>My Locations</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Restaurant name</th>
            <th>Address</th>
            <th>Phone number</th>
            <th>Email</th>
            <th colspan="2"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @profiles.each do |profile| %>
            <tr>
              <td><%= profile.restaurant_name %></td>
              <td><%= profile.address %></td>
              <td><%= profile.phone_number %></td>
              <td><%= profile.email %></td>
              <td>
                <%= link_to edit_profile_path(profile) do %>
                  <i class="fa fa-pencil-square-o"></i> Update
                <% end %>
              </td>
              <td>
                <%= link_to profile, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash-o"></i> Delete Location
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <br>
      <%= link_to 'New Location', new_profile_path, class: "btn btn-lg btn-yellow" %> | <%= link_to 'Back', dashboards_index_path, class: "btn btn-lg btn-white-grey" %>
    </div>
  </div>
</div>


